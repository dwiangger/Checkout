<Window x:Class="Checkout.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Checkout Manager" Height="156" Width="534" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="40" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Label Content="Welcome to Checkout! Please select what you'd like to do:" Name="lblInfo" VerticalAlignment="Center" Grid.ColumnSpan="3" MinWidth="326" />
        <Button Content="Launch Point of Sale" Name="btnLaunchPOS" Grid.Row="1" Grid.Column="0" Margin="20,10" Click="btnLaunchPOS_Click" />
        <Button Content="Manage Database" Name="btnManage" Grid.Row="1" Grid.Column="1" Margin="20,10" Click="btnManage_Click" />
        <Button Content="View Statistics" Name="btnStatistics" Grid.Row="1" Grid.Column="2" Margin="20,10" Click="btnStatistics_Click" />
    </Grid>
</Window>
